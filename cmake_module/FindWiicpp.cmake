IF(LINUX)
	FIND_PATH(WIICPP_INCLUDE_DIR wiicpp.h /usr/local/include/wiic)
	FIND_LIBRARY(WIICPP_LIBRARY NAMES libwiicpp PATH /usr/local/lib )
	IF(WIICPP_INCLUDE_DIR AND WIICPP_LIBRARY)
		SET(WIICPP_FOUND TRUE)
	ENDIF(WIICPP_INCLUDE_DIR AND WIICPP_LIBRARY)
ENDIF(LINUX)

IF (WIICPP_FOUND)
   IF (NOT WIICPP_FIND_QUIETLY)
      MESSAGE(STATUS "Found WIICPP: ${WIICPP_LIBRARY}")
   ENDIF (NOT WIICPP_FIND_QUIETLY)
ELSE (WIICPP_FOUND)
   IF (WIICPP_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find WIICPP. Please install Wiicpp package")
   ENDIF (WIICPP_FIND_REQUIRED)
ENDIF (WIICPP_FOUND)
